---
layout: base-4.njk
title: Photo Wall
---
{% set carSlides = carsAll %}

{% include "hero-services.njk" %}

<section>
    <div class="container">
        {{ content | safe }}

        <div class="columns is-multiline">

{% for carSlides, item in carSlides %}
  {%set pageSlideP = "./src/" %}
  {%set imgSlideP = item.image %}
  {%set fullSlideP = pageSlideP+imgSlideP %}
  {% set imgSlideAlt = item.altText %}
{#  {% set imgSlidePos = 'item.position' %} #}
   {% set imgSlidePos = "1234" %}  <!-- outputs as class="1234" -->
  {% set imgSizesResp = "(min-width: 1420px) 318px,
		(min-width: 1220px) 270px,
		(min-width: 1040px) 222px,
		(min-width: 780px) calc(25vw - 18px),
		calc(100vw - 24px)" %}

            <div class="column is-one-quarter">
              <div class="slide-box">
        {% if item.image|length %}
            {% image ""+fullSlideP, ""+imgSlideAlt, ""+imgSlidePos, ""+imgSizesResp %}
        {% endif %}
                <div class="feat-item_overlay">
                  <div class="feat-item_overlay_body">
                    <div class="logo-bkg-stripe">
                      <figure>
                    {% if item.title|length %}
                        <h3>{{ item.title }}</h3>
                    {% endif %}
                      </figure>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- end {{ loop.index }} -->
    {% endfor %}
        </div><!-- end columns -->

    </div>
</section>