<style>
.slider-cont {
  width: 820px;
  height: 544px;
}
.slider-cont .slide-box {
  position: relative;
  height: 540px;
  background-color: #f79837;
  overflow-y: hidden;
}

</style>
<div class="slider-cont">

<!-- START swiffy-slider -->
    <div class="swiffy-slider slider-nav-autoplay slider-item-helper slider-item-snapstart slider-item-nogap">  
      
      <ul class="slider-container">

{% for cont in collections[collectionName] %}
  {% if cont.data.isHome !==1 %}

    {%set pageP = "./src/" %}  {# .src/projects/67-camaro-forsyth/ = adds './src' to page url #}
    {%set imgP = cont.data.image %}  {# 67camaro_forsyth-0608.jpg = image file name #}
    {%set fullP = pageP+imgP %}  {# .src/projects/67-camaro-forsyth/67camaro_forsyth-0608.jpg = combines all for full img path #}
    {% set imgAlt = cont.data.altTag %}  {# 67 Camaro Forsyth before rear = sets imgAlt var with alt text string #}
        <li>
            <div class="slide-box">            
    {% if cont.data.image|length %}  {# Required to wrap in conditional statement to make it work #}
        {% image ""+fullP, ""+imgAlt %}  {# EXACT syntax neede pass src and alt vars to Image plugin #}
    {% endif %}
            </div>
        </li>
    {% endif %}
{% endfor %}

      </ul>

      <button type="button" class="slider-nav"></button>
      <button type="button" class="slider-nav slider-nav-next"></button>

      <div class="slider-indicators">
          <button class="active"></button>
          <button></button>
          <button></button>
      </div>
    </div>
<!-- END swiffy-slider -->

</div><!-- END slider-cont -->

        </div><!-- END container -->
      

</section>


